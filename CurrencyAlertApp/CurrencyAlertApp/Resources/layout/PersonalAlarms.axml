<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <EditText
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:ems="10"
        android:hint="@string/PA_Txt_NumberOfSeconds"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="@string/PA_Btn_NoOfSeconds"
        android:background="@drawable/button_state"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <Button
            android:id="@+id/btnSetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:text="@string/PA_Btn_SetDate" 
             android:background="@drawable/button_state"/>
        <TextView
            android:text="@string/PA_Txt_Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/txtDate" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <Button
            android:id="@+id/btnSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:text="@string/PA_Btn_SetTime" 
             android:background="@drawable/button_state"/>
        <TextView
            android:text="@string/PA_Txt_Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/txtTime" />
    </LinearLayout>
    <TextView
        android:text="@string/PA_Txt_OffSetTime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtOffSetTime" />
    <TextView
        android:text="@string/PA_Txt_combinedDateTime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtcombinedDateTime" />
    <Button
        android:text="@string/PA_Btn_SetPersonalAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSetPersonalAlert" 
        android:background="@drawable/button_state"/>
</LinearLayout>